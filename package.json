{
  "name": "personacraft",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "set NODE_OPTIONS=--max-old-space-size=4096 && prisma generate && next build",
    "build:fast": "set NODE_OPTIONS=--max-old-space-size=4096 && set SKIP_ENV_VALIDATION=true && prisma generate && next build",
    "build:optimized": "node scripts/build-cross-platform.js",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:performance": "ts-node -r tsconfig-paths/register test-performance.ts",
    "postinstall": "prisma generate",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "analyze-bundle": "node src/scripts/analyze-bundle.js",
    "build:analyze": "npm run analyze-bundle && npm run build",
    "vercel-build": "set NODE_OPTIONS=--max-old-space-size=4096 && prisma generate && prisma db push && next build"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@stackframe/stack": "latest",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.525.0",
    "next": "^15.0.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.0",
    "prisma": "^6.12.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "redis": "^5.6.1",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0-alpha.1",
    "zod": "^4.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "keywords": [
    "nextjs",
    "tailwindcss",
    "marketing",
    "personas",
    "ai"
  ],
  "author": "PersonaCraft Team",
  "license": "MIT",
  "description": "AI-Powered Marketing Persona Generation with Google Gemini and Qloo Taste AI"
}
